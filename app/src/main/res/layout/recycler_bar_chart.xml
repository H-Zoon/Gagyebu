<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:paddingVertical="16dp"
            android:paddingHorizontal="8dp"
            android:text="JAN"
            android:textSize="@dimen/barChartTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.intern.gagyebu.summary.yearly.BarCustomView
            android:id="@+id/viewPercentage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingVertical="8dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvMonth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/tvMonth"
            app:layout_constraintTop_toTopOf="@+id/tvMonth" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
